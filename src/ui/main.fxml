<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import ui.MachineRegister?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<!--suppress XmlDuplicatedId -->
<BorderPane
	xmlns="http://javafx.com/javafx/8.0.112"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="ui.MainController"
	stylesheets="@styles/styles.css"
	maxHeight="-Infinity"
	maxWidth="-Infinity"
	prefHeight="365.0"
	prefWidth="1020.0">
	<left>
			<ListView
				fx:id="commandLog"
				styleClass="command-list"
				prefWidth="130.0"
				BorderPane.alignment="CENTER">
				<!--Initially, the list contains 1 empty item to prevent drawing an empty (white) list-->
				<items>
					<FXCollections fx:factory="observableArrayList">
						<String/>
					</FXCollections>
				</items>
			</ListView>
	</left>

	<center>
		<TableView
			fx:id="memoryTable"
			styleClass="memory-table"
			BorderPane.alignment="CENTER">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
			</columnResizePolicy>

			<columns>
				<TableColumn
					text="#">
					<cellValueFactory>
						<PropertyValueFactory property="index"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="0">
					<cellValueFactory>
						<PropertyValueFactory property="a"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="1">
					<cellValueFactory>
						<PropertyValueFactory property="words1"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="2">
					<cellValueFactory>
						<PropertyValueFactory property="words[2]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="3">
					<cellValueFactory>
						<PropertyValueFactory property="words[3]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="4">
					<cellValueFactory>
						<PropertyValueFactory property="words[4]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="5">
					<cellValueFactory>
						<PropertyValueFactory property="words[5]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="6">
					<cellValueFactory>
						<PropertyValueFactory property="words[6]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="7">
					<cellValueFactory>
						<PropertyValueFactory property="words[7]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="8">
					<cellValueFactory>
						<PropertyValueFactory property="words[8]"/>
					</cellValueFactory>
				</TableColumn>

				<TableColumn
					text="9">
					<cellValueFactory>
						<PropertyValueFactory property="words[9]"/>
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
	</center>

	<bottom>
		<HBox
			prefHeight="35.0"
		  prefWidth="200.0"
		  spacing="15"
			alignment="CENTER_LEFT">
			<padding>
				<Insets
					top="10"
					right="10"
					bottom="10"
					left="10"/>
			</padding>

			<Button
				styleClass="next-command"
				minWidth="40"
				minHeight="40"
				maxWidth="40"
				maxHeight="40"
				onAction="#nextCommand">
				<graphic>
					<ImageView
						fitHeight="25.0"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="@arrow.png"/>
					</ImageView>
				</graphic>
			</Button>

			<TextField
				fx:id="input"
				styleClass="input-field"
				promptText="INPUT"
				prefWidth="100"/>

			<TextField
				fx:id="output"
				styleClass="output-field"
				editable="false"
				promptText="OUTPUT"
				prefWidth="100"/>
		</HBox>
	</bottom>

	<right>
		<VBox
			styleClass="machine-container"
			prefHeight="200.0"
			prefWidth="260.0"
			spacing="10">
			<GridPane
				styleClass="real-machine"
				alignment="CENTER_RIGHT"
				hgap="1"
				vgap="3">
				<MachineRegister
					fx:id="rmTMP"
					GridPane.columnIndex="0"
					GridPane.rowIndex="0"
					label="TMP"
					field="40545"/>

				<MachineRegister
					fx:id="rmPTR"
					GridPane.columnIndex="0"
					GridPane.rowIndex="1"
					label="PLR"
					field="50"/>

				<MachineRegister
					fx:id="rmIC"
					GridPane.columnIndex="0"
					GridPane.rowIndex="2"
					label="IC"
					field="14"/>

				<MachineRegister
					fx:id="rmC"
					GridPane.columnIndex="0"
					GridPane.rowIndex="3"
					label="C"
					field="0"/>

				<MachineRegister
					fx:id="rmTI"
					GridPane.columnIndex="0"
					GridPane.rowIndex="4"
					label="TI"
					field="0"/>

				<MachineRegister
					fx:id="rmPI"
					GridPane.columnIndex="0"
					GridPane.rowIndex="5"
					label="PI"
					field="0"/>

				<MachineRegister
					fx:id="rmSI"
					GridPane.columnIndex="1"
					GridPane.rowIndex="0"
					label="SI"
					field="0"/>

				<MachineRegister
					fx:id="rmIOI"
					GridPane.columnIndex="1"
					GridPane.rowIndex="1"
					label="IOI"
					field="0"/>

				<MachineRegister
					fx:id="rmMODE"
					GridPane.columnIndex="1"
					GridPane.rowIndex="2"
					label="MODE"
					field="S"/>

				<MachineRegister
					fx:id="rmBUSY"
					GridPane.columnIndex="1"
					GridPane.rowIndex="3"
					label="BUSY"
					field="0"/>
			</GridPane>

			<GridPane
				styleClass="virtual-machine"
				alignment="CENTER_RIGHT"
				hgap="1"
				vgap="3">
				<MachineRegister
					fx:id="vmTMP"
					GridPane.columnIndex="0"
					GridPane.rowIndex="0"
					label="TMP"
					field="40545"/>

				<MachineRegister
					fx:id="vmIC"
					GridPane.columnIndex="0"
					GridPane.rowIndex="2"
					label="IC"
					field="14"/>

				<MachineRegister
					fx:id="vmC"
					GridPane.columnIndex="0"
					GridPane.rowIndex="3"
					label="C"
					field="0"/>
			</GridPane>
		</VBox>
	</right>
</BorderPane>